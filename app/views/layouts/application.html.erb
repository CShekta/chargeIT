<!DOCTYPE html>
<html>
<head>
  <title>ChargeIT</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>

  <!-- Graphs -->
  <script type="text/javascript" src="http://d3js.org/d3.v3.min.js"></script>

  <!-- Maps -->
  <script src="http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet-src.js"></script>
  <script src='https://api.mapbox.com/mapbox.js/v2.3.0/mapbox.js'></script>
  <%= javascript_include_tag 'leafletSidebar.js', 'data-turbolinks-track' => true %>


  <!-- Map Styling -->
  <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.css" />
  <%= stylesheet_link_tag 'leaflet-sidebar.css', media: 'all' %>
  <link href='https://api.mapbox.com/mapbox.js/v2.3.0/mapbox.css' rel='stylesheet' />

  <!-- Driving Directions -->
  <script src='https://api.mapbox.com/mapbox.js/plugins/mapbox-directions.js/v0.4.0/mapbox.directions.js'></script>
  <link rel='stylesheet' href='https://api.mapbox.com/mapbox.js/plugins/mapbox-directions.js/v0.4.0/mapbox.directions.css' type='text/css' />

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'metricsgraphics.css', media: 'all' %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body class="<%= controller_name %> <%= action_name %>">
  <%= render 'shared/navbar' %>
  <%= render 'shared/messages' %>
  <%= yield %>
</body>
</html>
